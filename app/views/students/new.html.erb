<% if @student.errors.any? %>
  <%= pluralize(@student.errors.count, "error") %>
  prohibited your profile from being created.
  <ul>
    <% @student.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container">
  <div class="row center sign-up-form">
    <div class="col s12 m12 l12">
      <div class="card-panel">
        <h3 class="header">Sign up!</h3>
        <div class="row">
          <%= form_with model: @student, class: "col s12" do |f| %>
            <div class="row">
              <div class="input-field col s12">
                <%= f.text_field :name, class: "", placeholder: "Name", autofocus: true %>
                <%= f.label :name, class: "" %>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <%= f.text_field :email, class: "", placeholder: "Email" %>
                <%= f.label :email, class: "" %>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <%= f.submit "Submit", class: "btn orange waves-effect waves-light right" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
