<%= render 'shared/errors', obj: @student %>

<div class="container">
  <div class="row center sign-up-form">
    <div class="col s12 m12 l12">
      <div class="card-panel">
        <h3 class="header">
          <% if @student.new_record? %>
            Sign up!
          <% else %>
            Edit profile
          <% end %>
        </h3>
        <div class="row">
          <%= form_with model: @student, class: "col s12" do |f| %>
            <div class="row">
              <div class="input-field col s12">
                <%= f.text_field :name, class: "", placeholder: "Name", autofocus: true %>
                <%= f.label :name, class: "" %>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <%= f.text_field :email, class: "", placeholder: "Email" %>
                <%= f.label :email, class: "active" %>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <%= f.password_field :password, placeholder: "Choose a password" %>
                <%= f.label :password, class: "active" %>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <%= f.password_field :password_confirmation, placeholder: "Confirm your password" %>
                <%= f.label :password_confirmation, class: "active" %>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <%=
                  f.button(
                    @student.new_record? ? '<i class="material-icons right">arrow_forward</i>Sign up'.html_safe : '<i class="material-icons right">arrow_forward</i>Update'.html_safe,
                    class: "btn orange waves-effect waves-light right"
                  )
                %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
